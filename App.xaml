<Application x:Class="Assignemt_2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Assignemt_2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:ResearcherController x:Key="resCon"/>
        <ObjectDataProvider x:Key="researcherList"
                            ObjectInstance="{StaticResource resCon}"
                            MethodName="loadResearchers">
        </ObjectDataProvider>
        
    </Application.Resources>
</Application>
